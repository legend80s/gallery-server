generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id   Int    @id @default(autoincrement())
  // default is ip
  name String
  // uiConfig UIConfig @relation(fields: [uIConfigId], references: [id])

  uIConfig UIConfig?
}

model UIConfig {
  id Int @id @default(autoincrement())

  isColumnLayout  Boolean @default(false)
  isFooterVisible Boolean @default(true)

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique
}
